void run_ana(){
static bool loaded = false;

  gSystem->Load("ExRootAnalysis/libExRootAnalysis.so");

  if (loaded) gROOT->ProcessLine(".U ana.C");
  gSystem->CompileMacro("ExRootAnalysis/ana.C","k");
  loaded=true;
  ana("/project/Gruppo3/fiber5/celentano/EventGenerator/AprimeAlAlpha1/Events/BDXLNF007_unweighted_events.root");
}
;
